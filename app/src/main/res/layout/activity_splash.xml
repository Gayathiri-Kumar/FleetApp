<!-- res/layout/splash_screen.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#049797">

    <!-- Add your splash screen image or logo -->

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:src="@drawable/img_1" />

    <TextView
        android:layout_width="296dp"
        android:layout_height="60dp"
        android:layout_below="@+id/splash_logo"
        android:layout_alignBottom="@+id/splash_logo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="-60dp"
        android:gravity="center"
        android:text="Vehicle Management"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="303dp"
        android:layout_height="55dp"
        android:layout_below="@+id/splash_logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="79dp"
        android:gravity="center"
        android:text="Â© Copyright 2023 Rurutek Private Limited. All Rights Reserved"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="65dp"
        android:gravity="center"
        android:text="Developed by Rurutek"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="260dp"
        android:layout_height="149dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="259dp"
        android:src="@drawable/img" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="483dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/white"
        android:indeterminateTintMode="src_in"
        android:visibility="visible" />
</RelativeLayout>